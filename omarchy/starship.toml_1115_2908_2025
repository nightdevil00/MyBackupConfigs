# Disable the blank line at the start of the prompt
add_newline = false

# Username module with Hakker theme colors
[username]
show_always = true
style_user = "bg:#000000 fg:#00ff99"
style_root = "bg:#000000 fg:#ccffee"
format = '[$user ]($style)'
disabled = false

# Directory module with Hakker theme
[directory]
style = "bg:#00cc77 fg:#000000"
format = "[ $path ]($style)"
#truncation_length = 3
#runcation_symbol = "‚Ä¶/"

# Path substitutions for cleaner display
[directory.substitutions]
"Documents" = "Û∞àô "
"Downloads" = "ÔÄô "
"Music" = "ÔÄÅ "
